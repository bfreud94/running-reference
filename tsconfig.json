{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"module": "commonjs",
		"lib": ["dom", "es2017"],
		"allowJs": true,
		"jsx": "react",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "public"]
}